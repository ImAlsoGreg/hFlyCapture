Library
  Build-Tools:        c2hs
  Default-Language:    Haskell2010
  Build-Depends:
      base     (>= 4 && <= 5)
    , bytestring
    , carray
    , errors
    , JuicyPixels (>=3.1 && < 4.0)
    , mtl
    , transformers
    , vector 

  extra-lib-dirs: /usr/lib
  extra-libraries: flycapture-c
  include-dirs: /usr/include/flycapture/C
  Hs-Source-Dirs: src
  Exposed-Modules:
    System.FlyCap
    System.FlyCap.Internal
    System.FlyCap.AVI
